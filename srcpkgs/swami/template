# Template file for 'swami'
pkgname=swami
version=2.2.2
revision=1
build_style=cmake
hostmakedepends="pkgconf glib-devel"
makedepends="libinstpatch-devel fluidsynth-devel libsndfile-devel
 gtk+-devel libgnomecanvas-devel fftw-devel"
depends="desktop-file-utils hicolor-icon-theme"
short_desc="Graphical FluidSynth-based SoundFont instrument editor"
maintainer="a dinosaur <nick@a-dinosaur.com>"
license="GPL-2.0-only"
homepage="http://www.swamiproject.org/"
distfiles="https://github.com/swami/swami/archive/v${version}.tar.gz"
checksum=b3e3d5d8f1b4aab6f3d896a4c67c2beb3edf058ce1724e240bac6e6a486e4b9b

swami-devel_package() {
	depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" - development files"
	pkg_install() {
		vmove "usr/lib/*.so"
		vmove usr/include
	}
}
