# Template file for 'fsearch'
pkgname=fsearch
version=362bbfb
revision=1
build_style=gnu-configure
configure_args="--prefix=/usr"
hostmakedepends="git autogen automake libtool pkg-config autoconf-archive intltool gettext-devel"
makedepends="gtk+3-devel glib-devel pcre-devel"
depends="gtk+3 glib"
short_desc="A fast file search utility based on GTK+3"
maintainer="a dinosaur <nick@a-dinosaur.com>"
license="GPL-2.0-or-later"
homepage="https://github.com/cboxdoerfer/fsearch"

do_fetch() {
	git clone ${homepage} ${pkgname}-${version}
	cd ${pkgname}-${version}
	git reset --hard ${version}
}

pre_configure() {
	./autogen.sh
}
